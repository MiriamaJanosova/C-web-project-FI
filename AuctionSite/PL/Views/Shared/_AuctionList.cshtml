@using BL.DTOs.Base
@model IEnumerable<AuctionDto>

<div>
    @if (Model.Any())
    {
        <table style="width: 100%">
            <thead>
            <tr>
                <th>Auction name</th>
                <th>Items price</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>

            @foreach (var dto in Model)
            {
                <tr>
                    <td>@dto.Name</td>
                    <td>@dto.ActualPrice</td>
                    <td>
                        @Html.ActionLink("Inspect", "Auction", new {controller = "Auctions", action = "Auction", id = dto.Id})
                        <!---- Html.ActionLink("Delete", "Delete", "Auctions", new {id = dto.Id}) ---->
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    { 
        <div style="text-align: center">
            <b>Nothing to show</b>
        </div>
    }
</div>


