<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Moje aplikace ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <style>
        .hide-bullets {
            list-style:none;
            margin-left: -40px;
            margin-top:20px;
        }

        .thumbnail {
            padding: 0;
        }

        .carousel-inner>.item>img, .carousel-inner>.item>a>img {
            width: 100%;
        }
        
        .param {
            margin-bottom: 7px;
            line-height: 1.4;
        }
        .param-inline dt {
            display: inline-block;
        }
        .param dt {
            margin: 0;
            margin-right: 7px;
            font-weight: 600;
        }
        .param-inline dd {
            vertical-align: baseline;
            display: inline-block;
        }

        .param dd {
            margin: 0;
            vertical-align: baseline;
        } 

        .shopping-cart-wrap .price {
            color: #007bff;
            font-size: 18px;
            font-weight: bold;
            margin-right: 5px;
            display: block;
        }
        var {
            font-style: normal;
        }

        .media img {
            margin-right: 1rem;
        }
        .img-sm {
            width: 90px;
            max-height: 75px;
            object-fit: cover;
        }
    </style>
  
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Auction site", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Auctions", "Index", "Auctions")</li>
                    <li>@Html.ActionLink("Users", "Index", "Users")</li>
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                   
                    @if (Session["currency"] == null)
                    {
                        <li>@Html.ActionLink("Usd", "Index", "Currency")</li>
                    }
                    else
                    {
                        var currency =  @Session["currency"];
                        <li>@Html.ActionLink(@Session["currency"].ToString(), "Index", "Currency")</li>
                    }
                    
                </ul>
                @Html.Partial("_Login")
            </div>
            
        </div>
    </div>
<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year – Moje aplikace ASP.NET</p>
    </footer>
</div>
@Scripts.Render("~/bundles/bootstrap")



</body>
</html>
