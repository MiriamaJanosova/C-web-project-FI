@model BL.DTOs.Base.ReviewDto

<h2>AddReview</h2>

@using (Html.BeginForm("AddReview", "Review", FormMethod.Post))
{

<p>
    @for (int i = 1; i <= 10; i++)
    {
        @i 
        @Html.RadioButtonFor(m => m.Evaluation, i)
        @:&nbsp;
    }
</p>
    <p>
        Description
        @Html.EditorFor(m => m.Description)
    </p>
    @Html.HiddenFor(m => m.ReviewedUserID)
    @Html.HiddenFor(m => m.UserWhoWroteID)
    <input type="submit" value="Submit">
}
